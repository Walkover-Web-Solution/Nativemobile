{
  "name": "giddh-mobile-app",
  "version": "0.0.1",
  "description": "NativeScript Application",
  "license": "SEE LICENSE IN <your-license-filename>",
  "readme": "NativeScript Application",
  "repository": "<fill-your-repository-here>",
  "nativescript": {
    "id": "org.walkover.giddh",
    "name": "giddh",
    "tns-android": {
      "version": "3.1.1"
    },
    "hooks": [
      {
        "type": "before-prepare",
        "script": "./customHooks/before-prepare/nativescript-environment.js"
      }
    ],
    "tns-ios": {
      "version": "3.3.0"
    }
  },
  "dependencies": {
    "@angular/common": "~4.4.1",
    "@angular/compiler": "~4.4.1",
    "@angular/core": "~4.4.1",
    "@angular/forms": "~4.4.1",
    "@angular/http": "~4.4.1",
    "@angular/platform-browser": "~4.4.1",
    "@angular/router": "~4.4.1",
    "@ngrx/effects": "4.1.1",
    "@ngrx/router-store": "4.1.1",
    "@ngrx/store": "4.1.1",
    "@ngrx/store-devtools": "4.1.1",
    "lodash": "^4.17.4",
    "nativescript-angular": "^4.4.1",
    "nativescript-ngx-fonticon": "^3.0.0",
    "nativescript-secure-storage": "^2.2.1",
    "nativescript-theme-core": "~1.0.2",
    "ngrx-devtools-nativescript": "~0.5.0",
    "ngrx-store-logger": "^0.2.0",
    "reselect": "^3.0.1",
    "rxjs": "~5.3.0",
    "tns-core-modules": "^3.0.0",
    "zone.js": "^0.8.4"
  },
  "devDependencies": {
    "babel-traverse": "6.15.0",
    "babel-types": "6.15.0",
    "babylon": "6.9.1",
    "cross-env": "^5.1.1",
    "lazy": "1.0.11",
    "nativescript-dev-sass": "1.3.5",
    "nativescript-dev-typescript": "^0.5.0",
    "tns-platform-declarations": "^3.2.0",
    "typescript": "~2.3.1",
    "rimraf": "2.6.2"
  },
  "scripts": {
    "start": "cross-env BUILD_PROFILE=dev tns run ios --chrome",
    "start:android": "cross-env BUILD_PROFILE=dev tns run android --chrome",
    "debug": "cross-env BUILD_PROFILE=dev tns debug ios --chrome",
    "clean": "npm run js.clean && npm run css",
    "css.clean": "find app -type f -iname '*.css' -and ! -iname 'font-awesome.min.css' -delete",
    "css.generate": "node -e 'require(\"./node_modules/nativescript-dev-sass/lib/converter.js\").convert(console, \".\");'",
    "css": "npm run css.clean && npm run css.generate",
    "js.clean": "npx rimraf -- app/**/*.js"
  }
}
